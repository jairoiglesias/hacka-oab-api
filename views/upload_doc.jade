            $('#frm_upload_doc_v2').submit(function(e){

                e.preventDefault()

                // Recupera os arquivos do input file
                var file = $('#file_doc_v2')[0].files[0]

                if(file == undefined){
                    alertify.error('Selecione um arquivo JPEG/TIFF')
                }
                else{

